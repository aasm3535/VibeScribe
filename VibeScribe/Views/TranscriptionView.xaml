<Page
    x:Class="VibeScribe.Views.TranscriptionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:VibeScribe.ViewModels"
    xmlns:models="using:VibeScribe.Models">

    <Page.DataContext>
        <viewmodels:TranscriptionViewModel/>
    </Page.DataContext>

    <Grid>
        <ListView ItemsSource="{x:Bind ViewModel.Transcriptions}" SelectedItem="{x:Bind ViewModel.SelectedTranscription, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Transcription">
                    <StackPanel>
                        <TextBlock Text="{x:Bind Title}" FontWeight="Bold"/>
                        <TextBlock Text="{x:Bind Timestamp}" FontSize="12"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <ContentThemeTransition />
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
        </ListView>
    </Grid>
</Page>