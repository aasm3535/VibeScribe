<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VibeScribe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VibeScribe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VibeScribe">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="10">
        <!-- Header Row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="All Recordings"
                       VerticalAlignment="Center"
                       FontSize="18" />
            <Button x:Name="NewRecordingButton" Grid.Column="1" Click="NewRecordingButton_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <FontIcon x:Name="RecordingIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xEA3F;" FontSize="12" Margin="0,0,4,0" />
                    <TextBlock x:Name="RecordingTextBlock" Text="New Recording" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Records History and Title -->
            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Records History" Margin="0,0,0,10" FontWeight="Bold" />
                <ListView x:Name="RecordsListView" ItemClick="RecordsListView_ItemClick" SelectionMode="Single" Margin="0,0,0,20">
                    <!-- Items will be added from code -->
                </ListView>
                <TextBox x:Name="RecordingTitleTextBlock" Text="Recording Title" FontSize="18" FontWeight="Bold" IsReadOnly="True" Background="Transparent" BorderThickness="0" VerticalAlignment="Top" />
            </StackPanel>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="2" Width="5" Background="LightGray" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

            <!-- Right Panel: Transcript -->
            <StackPanel Grid.Column="1">
                <TextBlock x:Name="TranscriptTitleTextBlock" Text="Transcript Title" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                    <TextBlock x:Name="TranscriptTextBlock" Text="Select a recording to view the transcript." TextWrapping="Wrap" FontSize="14" />
                </ScrollViewer>
            </StackPanel>
        </Grid>

        <!-- Status at bottom -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0" FontSize="12" Foreground="Gray" Grid.ColumnSpan="3" />
    </Grid>
</Window>