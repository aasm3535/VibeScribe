<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VibeScribe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VibeScribe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VibeScribe">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header: Row 0 -->
        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="AllRecordingsTextBlock" Text="All Recordings"
                       VerticalAlignment="Center" FontSize="18" />
            <Button Grid.Column="1" x:Name="NewRecordingButton" Click="NewRecordingButton_Click"
                    Background="Transparent" BorderThickness="0" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <FontIcon x:Name="RecordingIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xEA3F;" FontSize="12" Margin="0,0,4,0" />
                    <TextBlock x:Name="RecordingTextBlock" Text="New Recording" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Content: Row 1 -->
        <Grid x:Name="MainContentGrid" Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColumn" Width="300*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Column 0 -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Records History" Margin="0,0,0,10" FontWeight="Bold" />
                <ListView x:Name="RecordsListView" ItemClick="RecordsListView_ItemClick" SelectionMode="Single" Margin="0,0,0,10">
                    <!-- Items will be added from code -->
                </ListView>
                <TextBlock x:Name="RecordingTitleTextBlock" Text="Select a recording" FontSize="16" FontWeight="SemiBold" />
            </StackPanel>

            <!-- Splitter: Column 1 -->
            <Rectangle x:Name="ColumnSplitter" Grid.Column="1"
                       Fill="LightGray"
                       PointerEntered="ColumnSplitter_PointerEntered"
                       PointerExited="ColumnSplitter_PointerExited"
                       PointerPressed="ColumnSplitter_PointerPressed"
                       PointerReleased="ColumnSplitter_PointerReleased"
                       PointerMoved="ColumnSplitter_PointerMoved"
                       IsHitTestVisible="True" />

            <!-- Right Panel: Column 2 -->
            <StackPanel Grid.Column="2">
                <TextBlock x:Name="TranscriptTitleTextBlock" Text="No Title" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                    <TextBlock x:Name="TranscriptTextBlock" Text="Select a recording to view the transcript." TextWrapping="Wrap" FontSize="14" />
                </ScrollViewer>
                <TextBlock x:Name="StatusTextBlock" Text="Ready to record" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12" Foreground="Gray" VerticalAlignment="Bottom" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>