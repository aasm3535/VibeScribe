<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VibeScribe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VibeScribe"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VibeScribe">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
        Text="All Recording"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Margin="10,10,0,0"/>

        <Button Grid.Row="0" Grid.Column="1"
        Content="Record"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Click="RecordButton_Click" />

        <Button x:Name="NewRecordingButton" Grid.Row="0" Grid.Column="2" Click="NewRecordingButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0">
            <StackPanel Orientation="Horizontal">
                <FontIcon x:Name="RecordingIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xEA3F;" FontSize="12" Margin="0,0,4,0" />
                <TextBlock x:Name="RecordingTextBlock" Text="New Recording" />
            </StackPanel>
        </Button>

        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,10"
                   FontSize="14"
                   Foreground="Gray" />

    </Grid>
</Window>